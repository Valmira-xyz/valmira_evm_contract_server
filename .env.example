# Server Configuration
PORT=32156                    # Server port number
NODE_ENV=development          # Environment (development, production, test)

# Redis Configuration
REDIS_HOST=localhost          # Redis host address
REDIS_PORT=6379              # Redis port number
REDIS_PASSWORD=              # Redis password (if required)
REDIS_DB=0                   # Redis database number

# JWT Configuration
JWT_SECRET=your_jwt_secret   # Secret key for JWT token generation
JWT_EXPIRES_IN=24h          # JWT token expiration time
JWT_REFRESH_SECRET=your_refresh_secret  # Secret for refresh tokens
JWT_REFRESH_EXPIRES_IN=7d   # Refresh token expiration time

# Contract Configuration
CONTRACT_TEMPLATES_PATH=contracts    # Path to contract templates
CONTRACT_OUTPUT_PATH=output         # Path for generated contracts
CONTRACT_VERIFICATION_TIMEOUT=300000 # Contract verification timeout in ms
MAX_CONCURRENT_DEPLOYMENTS=5        # Maximum number of concurrent deployments

# Logging Configuration
LOG_LEVEL=debug              # Log level (debug, info, warn, error)
LOG_FILE_PATH=logs          # Path for log files
LOG_MAX_SIZE=10m            # Maximum size of log files
LOG_MAX_FILES=5             # Maximum number of log files to keep

# Network Configuration
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_TESTNET_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# API Keys
BSCSCAN_API_KEY=your_bscscan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Rate Limiting
RATE_LIMIT_WINDOW=15        # Time window for rate limiting (minutes)
RATE_LIMIT_MAX_REQUESTS=100 # Maximum requests per window
RATE_LIMIT_SKIP_FAILED_REQUESTS=false # Whether to count failed requests

# Security
CORS_ORIGIN=*               # CORS allowed origins
MAX_REQUEST_SIZE=10mb       # Maximum request body size
ENABLE_RATE_LIMIT=true      # Enable rate limiting
ENABLE_REQUEST_LOGGING=true # Enable request logging
ENABLE_ERROR_TRACKING=true  # Enable error tracking

# Monitoring
ENABLE_METRICS=true         # Enable metrics collection
METRICS_PORT=9090          # Port for metrics endpoint
ENABLE_HEALTH_CHECK=true   # Enable health check endpoint

# Queue Configuration
QUEUE_CONCURRENCY=5         # Number of concurrent queue workers
QUEUE_TIMEOUT=30000        # Queue job timeout in ms
QUEUE_RETRY_DELAY=5000     # Delay between retries in ms
QUEUE_MAX_RETRIES=3        # Maximum number of retries

# Cache Configuration
CACHE_TTL=300              # Cache TTL in seconds
CACHE_CHECK_PERIOD=60      # Cache cleanup check period in seconds 