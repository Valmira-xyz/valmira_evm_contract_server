{
    "name": "valmira-contracts-server",
    "version": "1.0.0",
    "description": "Smart contract deployment server for Valmira",
    "main": "src/index.js",
    "scripts": {
        "start": "NODE_ENV=production node src/index.js",
        "dev": "NODE_ENV=development nodemon --watch 'src/**/*.js' --ignore 'src/**/*.test.js artifacts cache' src/index.js",
        "dev:debug": "NODE_ENV=development nodemon --inspect --watch 'src/**/*.js artifacts cache' --ignore 'src/**/*.test.js' src/index.js",
        "test": "NODE_ENV=test jest --detectOpenHandles",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "format": "prettier --write \"src/**/*.js\"",
        "build": "tsc",
        "clean": "rimraf dist",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.5",
        "@nomiclabs/hardhat-etherscan": "^3.1.8",
        "@nomiclabs/hardhat-waffle": "^2.0.2",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "dotenv": "^16.3.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^27.6.0",
        "eslint-plugin-prettier": "^3.4.1",
        "hardhat": "^2.8.4",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.2",
        "prettier": "^2.5.1",
        "prettier-plugin-solidity": "^1.0.0-beta.13",
        "rimraf": "^5.0.5",
        "typescript": "^5.3.3",
        "winston": "^3.11.0"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "ethers": "^6.10.0",
        "is-empty": "^1.2.0",
        "jsonwebtoken": "^9.0.2"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "./coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js"
        ],
        "testMatch": [
            "**/__tests__/**/*.js",
            "**/?(*.)+(spec|test).js"
        ]
    },
    "packageManager": "yarn@4.2.2+sha512.c44e283c54e02de9d1da8687025b030078c1b9648d2895a65aab8e64225bfb7becba87e1809fc0b4b6778bbd47a1e2ab6ac647de4c5e383a53a7c17db6c3ff4b"
}
